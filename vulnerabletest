        <textarea id="commentInput" placeholder="Write your comment here, nya~"></textarea>
        <button id="postComment">Post Comment</button>
    </div>
<script>
document.getElementById('postComment').addEventListener('click', function() {
    const commentInput = document.getElementById('commentInput');
    const commentText = escapeHTML(commentInput.value);

    if (commentText) {
        const commentElement = document.createElement('div');
        commentElement.className = 'comment';
        commentElement.innerText = commentText;  // Use innerText instead of textContent

        document.getElementById('comments').appendChild(commentElement);

        // Clear the textarea after posting
        commentInput.value = '';
    }
});

function escapeHTML(text) {
    return text.replace(/&/g, "&amp;")
               .replace(/</g, "&lt;")
               .replace(/>/g, "&gt;")
               .replace(/"/g, "&quot;")
               .replace(/'/g, "&#039;");
}

</script>
